<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:signaturePad="clr-namespace:Syncfusion.Maui.SignaturePad;assembly=Syncfusion.Maui.SignaturePad"
             xmlns:local="clr-namespace:SignaturePadImage"
             x:Class="SignaturePadImage.MainPage">

  

   
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25" x:Name="stk">
           

        <Button
             x:Name="CounterBtn"
             Text="Click me" 
             SemanticProperties.Hint="Counts the number of times you click"
                Clicked="CounterBtn_Clicked"
             
             HorizontalOptions="Fill" />

       

        <signaturePad:SfSignaturePad HeightRequest="200" WidthRequest="200"/>
            
            
            
        </VerticalStackLayout>

   



</ContentPage>
